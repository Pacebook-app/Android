<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 고정 상단 앱바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recruitment_appbar_ABL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/recruitment_appbar_MT"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_anchor="@+id/recruitment_appbar_ABL"
            app:layout_anchorGravity="center"
            app:navigationIcon="@drawable/chevron_icon"
            app:title="메이트 모집하기"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:titleTextColor="@android:color/black" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recruitment_content_CL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recruitment_picture_CV"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:strokeWidth="1dp"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/recruitment_picture_IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#B2C9FF"
                    android:src="@drawable/running_icon"
                    android:contentDescription="@string/app_name"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/recruitment_picturebutton_AB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/camera_icon"
                    app:backgroundTint="#0A57FF"
                    app:tint="@android:color/white"
                    app:fabSize="mini"
                    app:iconSize="18dp"
                    android:contentDescription="사진 추가" />


            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 한 섹션 컨테이너: 좌우 20dp, 위아래 간격 24dp -->
        <LinearLayout
            android:id="@+id/recruitment_placelayout_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recruitment_picture_CV">

            <!-- 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="러닝 장소"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"/>

            <!-- 입력 박스(둥근 Outlined + 카운터 우하단) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recruitment_placebox_IL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxBackgroundMode="outline"
                app:shapeAppearanceOverlay="@style/corner"
                app:counterEnabled="true"
                app:boxStrokeColor="@color/text_inputbox"
                app:counterMaxLength="15">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recruitment_placetext_TI"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="10dp"
                    android:hint="장소를 입력하세요"
                    android:maxLength="15"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <!-- 러닝 이름 -->
        <LinearLayout
            android:id="@+id/recruitment_namelayout_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recruitment_placelayout_LL">

            <!-- 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="러닝 이름"
                android:textSize="16sp"
                android:layout_marginBottom="6dp"/>

            <!-- 입력 박스(둥근 Outlined + 카운터 우하단) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/recruitment_namebox_IL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/text_inputbox"
                app:shapeAppearanceOverlay="@style/corner"
                app:counterEnabled="true"
                app:counterMaxLength="15">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recruitment_nametext_TI"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="이름을 입력하세요"
                    android:textSize="10dp"
                    android:maxLength="15"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/recruitment_timelayout_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recruitment_namelayout_LL">

            <!-- 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="러닝 시간"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <!-- 시작/종료 시간 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/recruitment_starttimebox_IL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    app:shapeAppearanceOverlay="@style/corner"
                    app:boxStrokeColor="@color/text_inputbox"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="시작 시간">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recruitment_starttime_TI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- 중간 여백 -->
                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/recruitment_endtimebox_IL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    app:shapeAppearanceOverlay="@style/corner"
                    app:boxStrokeColor="@color/text_inputbox"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="종료 시간">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recruitment_endtime_TI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:focusable="false"
                        android:clickable="true" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>



        <!-- 하단 고정 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/recruitment_makebutton_MB"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:backgroundTint="#104BD7"
            android:textColor="@color/white"
            android:text="개설하기"
            android:enabled="false"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:shapeAppearanceOverlay="@style/corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="160dp"/>

        <!-- 버튼 위 여백(폼이 버튼에 붙지 않게) -->
        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/recruitment_timelayout_LL"
            app:layout_constraintBottom_toTopOf="@id/recruitment_makebutton_MB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
