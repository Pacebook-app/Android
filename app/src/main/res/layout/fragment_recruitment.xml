<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recruitment_appbar_ABL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/recruitment_appbar_MT"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:navigationIcon="@drawable/chevron_icon"
            app:title="메이트 모집하기"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:titleTextColor="@android:color/black" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recruitment_content_CL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recruitment_makebutton_MB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recruitment_picture_CV"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeWidth="1dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/recruitment_picture_IV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#B2C9FF"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/running_icon" />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/recruitment_picturebutton_AB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="10dp"
                            android:contentDescription="사진 추가"
                            app:backgroundTint="#495C89"
                            app:fabSize="mini"
                            app:iconSize="18dp"
                            app:srcCompat="@drawable/camera_icon"
                            app:tint="@android:color/white" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/recruitment_placelayout_LL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recruitment_picture_CV">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="6dp"
                        android:text="러닝 장소"
                        android:textSize="16sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/recruitment_placebox_IL"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/text_inputbox"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:shapeAppearanceOverlay="@style/corner">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recruitment_placetext_TI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="장소를 입력하세요"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recruitment_introlayout_LL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recruitment_placelayout_LL">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="6dp"
                        android:text="한줄 소개"
                        android:textSize="16sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/recruitment_introbox_IL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/text_inputbox"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        app:shapeAppearanceOverlay="@style/corner">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recruitment_introtext_TI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="한줄소개를 입력하세요"
                            android:maxLength="15"
                            android:singleLine="true"
                            android:textSize="10dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recruitment_timelayout_LL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/recruitment_introlayout_LL">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="6dp"
                        android:text="러닝 시간"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="시작 시간"
                                app:boxStrokeColor="@color/text_inputbox"
                                app:shapeAppearanceOverlay="@style/corner">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/recruitment_starttime_TI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textSize="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <View
                                android:id="@+id/recruitment_starttimeclickarea_v"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />
                        </FrameLayout>
                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="종료 시간"
                                app:boxStrokeColor="@color/text_inputbox"
                                app:shapeAppearanceOverlay="@style/corner">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/recruitment_endtime_TI"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:textSize="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <View
                                android:id="@+id/recruitment_endtimeclickarea_v"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/recruitment_makebutton_MB"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="120dp"
            android:text="개설하기"
            android:textColor="@color/white"
            app:backgroundTint="#104BD7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/corner" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>