<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.RunningmateFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/runningmate_appbar_ABL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/runingmate_appbar_MT"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:navigationIcon="@drawable/chevron_icon"
            app:titleCentered="true"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:titleTextColor="@android:color/black"

            />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/runningmate_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 메이트 (0)"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="100dp"/>

    <FrameLayout
        android:id="@+id/runningmate_selectedframe_fl"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/runningmate_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/runningmate_selectedlist_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/selected_mate" />

        <TextView
            android:id="@+id/runningmate_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나만의 메이트를 만들거나\n새로운 메이트를 만들어 보세요."
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>
    <View
        android:id="@+id/runningmate_line_v"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#104BD7"
        app:layout_constraintTop_toBottomOf="@id/runningmate_selectedframe_fl"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp" />




    <!-- 네비게이션바를 위한 가이드라인을 적용 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/runningmate_guideline_Gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/bottom_navigation_height" />

    <!-- 세로 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/runninmate_chooselist_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/runningmate_line_v"
        app:layout_constraintBottom_toBottomOf="@id/runningmate_guideline_Gl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/choose_mate" />

    <ImageView
        android:id="@+id/runningmate_addbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="30dp"
        android:src="@drawable/add_circle"
        android:contentDescription="메이트 추가"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/runningmate_guideline_Gl"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
